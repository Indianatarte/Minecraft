command /givetalkie:
	trigger:
		if player has permission "desta.modo":
			set {_item} to pickaxe
			set id of {_item} to 4863
			set name of {_item} to  "&6&lTalkie-Walkie"
			set line 1 of lore of {_item} to "&4&l&oOFF"
			give 1 of {_item} to player
